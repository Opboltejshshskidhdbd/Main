-- Load Rayfield
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

-- Load Key
local loadedKey = loadstring(game:HttpGet("https://pastebin.com/raw/sYksyEy"))()

-- Print loaded key
print(loadedKey)

-- Function to read key from file
function readKey()
    if readfile("/locuskey/key.txt") == loadedKey then
        -- Key is valid
        return true
    else
        -- Key is not valid
        return false
    end
end

-- Create Rayfield window
local Window = Rayfield:CreateWindow({
    Name = "Main",
    LoadingTitle = "Main",
    LoadingSubtitle = "by locus",
    ConfigurationSaving = {
        Enabled = false,
        FolderName = nil, -- Create a custom folder for your hub/game
        FileName = "Big Hub"
    },
    Discord = {
        Enabled = false,
        Invite = "ABCD", -- The Discord invite code, do not include discord.gg/
        RememberJoins = true, -- Set this to false to make them join the discord every time they load it up
        KeySystem = false, -- Set this to true to use our key system
        KeySettings = {
            Title = "Sirius Hub",
            Subtitle = "Key System",
            Note = "Join the discord (discord.gg/sirius)",
            Siriuskey = {
                SaveKey = true,
                Grabkeyfronsite = false, -- If this is true, set key below to the RAW site you would like Rayfield to get the key from
                Key = "Hello"
            }
        }
    }
})

-- Check if the key file and folder exist, if not, create them
if not isfolder("/locuskey") then
    makefolder("/locuskey")
end

if not isfile("/locuskey/key.txt") then
    makefile("/locuskey/key.txt")
end
